# Copy to config/backup.env and edit values for your machine.

RESTIC_REPOSITORY=/mnt/c/BackupRepos/r-hot-notes-repos
RESTIC_PASSWORD_COMMAND=keepassxc-cli show Backup/restic-notes -a password

SOURCE_NOTES=$HOME/notes
SOURCE_REPOS=$HOME/repos

REPORT_DIR=/mnt/c/BackupReports/notes-repos
LARGE_FILE_THRESHOLD=2G
HOTSPOT_THRESHOLD=5000

# Retention policy for hot data
KEEP_DAILY=30
KEEP_WEEKLY=12
KEEP_MONTHLY=12