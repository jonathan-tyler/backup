{
    "name": "backup",
    "build": {
        "dockerfile": "Containerfile",
        "context": "..",
        "target": "project"
    },
    "containerUser": "developer",
    "remoteUser": "developer",
    "updateRemoteUserUID": true,
    "runArgs": [
        "--userns=keep-id",
        "--security-opt=no-new-privileges"
    ],
    "workspaceMount": "source=${localWorkspaceFolder}/../..,target=/workspace,type=bind",
    "workspaceFolder": "/workspace/linux/backup",
    "postCreateCommand": "install -d -m 0755 /home/developer/.cache /home/developer/go /home/developer/go/bin && GOBIN=/home/developer/go/bin go install -v golang.org/x/tools/cmd/goimports@latest",
    "mounts": [
        "type=volume,target=/home/developer/.cache",
        "type=volume,target=/home/developer/go",
        // Optional: enable this mount locally if you have a host starship config.
        "type=bind,source=${localEnv:HOME}/.config/starship.toml,target=/home/developer/.config/starship.toml,readonly"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "davidanson.vscode-markdownlint",
                "golang.go"
            ]
        }
    }
}