{
    "name": "backup",
    "build": {
        "dockerfile": "Containerfile",
        "context": "..",
        "target": "project"
    },
    "containerUser": "developer",
    "remoteUser": "developer",
    "updateRemoteUserUID": true,
    "runArgs": [
        "--userns=keep-id",
        "--security-opt=no-new-privileges"
    ],
    "workspaceMount": "source=${localWorkspaceFolder}/../..,target=/workspace,type=bind",
    "workspaceFolder": "/workspace/linux/backup",
    "postCreateCommand": "bash .devcontainer/scripts/post-create.sh",
    "mounts": [
        "type=volume,target=/home/developer/.cache",
        "type=volume,target=/home/developer/go",
        "type=bind,source=${localEnv:HOME}/.agents,target=/home/developer/.agents,readonly",
        // Use less restrictive agent allowances only inside dev containers
        "type=bind,source=${localEnv:HOME}/.config/dev-containers/settings.json,target=/home/developer/.vscode-server/data/Machine/settings.json",
        // Host WSL backup config dir bind-mounted for real config editing/testing.
        "type=bind,source=${localEnv:HOME}/.config/backup,target=/home/developer/.config/backup",
        // Optional: enable this mount locally if you have a host starship config.
        "type=bind,source=${localEnv:HOME}/.config/starship.toml,target=/home/developer/.config/starship.toml,readonly"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "davidanson.vscode-markdownlint",
                "golang.go"
            ]
        }
    }
}