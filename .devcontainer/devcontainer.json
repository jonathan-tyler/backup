{
    "name": "backup",
    "build": {
        "dockerfile": "Containerfile",
        "context": "..",
        "target": "project"
    },
    "containerUser": "developer",
    "remoteUser": "developer",
    "updateRemoteUserUID": true,
    "runArgs": [
        "--userns=keep-id"
    ],
    "workspaceMount": "source=${localWorkspaceFolder}/../..,target=/workspace,type=bind",
    "workspaceFolder": "/workspace/linux/backup",
    "postCreateCommand": "sudo install -d -m 0755 -o developer -g developer /home/developer/.cache /home/developer/go",
    "containerEnv": {
        // "GOCACHE": "/home/developer/.cache/go-build",
        // "GOMODCACHE": "/home/developer/go/pkg/mod"
    },
    "mounts": [
        "type=volume,target=/home/developer/.cache",
        "type=volume,target=/home/developer/go"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "davidanson.vscode-markdownlint",
                "golang.go"
            ]
        }
    }
}